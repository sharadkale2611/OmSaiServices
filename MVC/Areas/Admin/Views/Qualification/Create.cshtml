@{
    ViewData["Title"] = "Create Qualification";
}

<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">
                    Add New Qualification
                </h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Master</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Qualification" asp-action="Index">Roles</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Create
                    </li>
                </ol>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->


<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <partial name="~/Views/shared/_alertpartial.cshtml" />
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class=" mb-4">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Create" method="post">
                                <div class="form-group mb-3">
                                    <label for="qualificationName">Qualification Name</label>
                                    <input type="text" name="qualificationName" id="qualificationName" class="form-control" />
                                </div>

                                @* <div class="form-group mb-3">
                                    <label for="Status">Status</label>
                                    <input type="text" name="Status" id="status" class="form-control" />
                                </div> *@

                                <div class="form-group mb-3 form-check form-switch ">
                                    <label id="Status">Status</label>
                                    <input class="form-check-input" type="checkbox" id="Status" name="status" />
                                </div>



                                <button type="submit" class="btn btn-outline-primary">Create</button>
                                <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="Qualification" asp-action="Index"> Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

